---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4">
          <h2 class="text-xl sm:text-2xl md:text-3xl xl:text-4xl font-bold text-gray-900">
            Experiences
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="space-y-8">
            {siteConfig.projects.map((project, index) => {
              // prepare the main inner content once (avoids duplication)
              const content = (
                <>
                  {project.link && (
                    <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                      <svg
                        class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M7 17L17 7M17 7H7M17 7V17"
                        />
                      </svg>
                    </div>
                  )}

                  <div class="space-y-4">
                    <div>
                      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                        {project.name}
                      </h3>
                    </div>

                    <p
                      class={`text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                    >
                      {project.description}
                    </p>

                    {project.bullets && project.bullets.length > 0 && (
                      <ul class="space-y-2">
                        {project.bullets.map((bullet, bIndex) => {
                          const isObject = bullet && typeof bullet === "object";
                          const text = isObject ? bullet.text : bullet;
                          const link = isObject ? bullet.link : undefined;

                          return (
                            <li class="flex items-start" key={bIndex}>
                              <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                              {link ? (
                                <a
                                  href={link}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="text-sm sm:text-base hover:underline"
                                  style={{ color: #693f6b }}
                                >
                                  {text}
                                </a>
                              ) : (
                                <span class="text-sm sm:text-base text-gray-600">
                                  {text}
                                </span>
                              )}
                            </li>
                          );
                        })}
                      </ul>
                    )}
                  </div>
                </>
              );

              const cardClass = `block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                project.link ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1" : ""
              }`;

              return (
                <div class="group relative" key={index}>
                  {project.link ? (
                    <a {...{ href: project.link, target: "_blank", rel: "noopener noreferrer" }} class={cardClass}>
                      {content}
                    </a>
                  ) : (
                    <div class={cardClass}>
                      {content}
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
